<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="io" class="com.esai.vendingmachine.ui.UserIOConsoleImpl" />

    <bean id="dao" class="com.esai.vendingmachine.dao.VendingMachineDaoFileImpl" />
    
    <bean id="auditdao" class="com.esai.vendingmachine.dao.ClassVendingMachineAuditDaoFileImpl" />
    
    <bean id="view" class="com.esai.vendingmachine.ui.VendingMachineView">
        <constructor-arg ref="io" />
    </bean>

    <bean id="service" class="com.esai.vendingmachine.service.VendingMachineServiceLayerImpl">
        <constructor-arg ref="dao" />
        <constructor-arg ref="auditdao" />
    </bean>

    <bean id="controller" class="com.esai.vendingmachine.controller.VendingMachineController">
        <constructor-arg ref="service" />
        <constructor-arg ref="view" />
    </bean>

</beans>
